                "name",
                "uri",
				"type"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name of the CAFF file"
                },
				"uri": {
					"type": "string",
					"description": "The path of the CAFF file"
				},
                "type": {
                    "type": "string",
                    "description": "The CAFF file's type"
                },
				"file": {
					"type": "object",
					"description": "The CAFF file"
				}
            }
        },
		"CAFFUpLoad": {
            "type": "object",
            "required": [
                "name",
                "file"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name of the CAFF file"
                },
                "file": {
                    "type": "object",
                    "description": "The CAFF file"
                }
            }
        },
        "CAFFPreview": {
            "type": "object",
            "required": [
                "id",
                "name",
                "imguri"
            ],
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "name": {
                    "type": "string",
                    "description": "The name of the CAFF file"
                },
                "uri": {
                    "type": "string",
                    "description": "The path of the image generated from first CIFF in CAFF"
                },
                "comments": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Comment"
                    },
                    "description": "The comments on the CAFF preview"
                }
            }
        },
        "Comment": {
            "type": "object",
            "required": [
                "id",
                "username",
                "comment"
            ],
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "username": {
                    "type": "string",
                    "description": "The commenting user's username"
                },
                "comment": {
                    "type": "string",
                    "description": "The comment itself"
                }
            }
        },
        "User": {
            "type": "object",
            "required": [
                "user_id",
                "username",
                "email",
                "password",
				"roles"
            ],
            "properties": {
                "user_id": {
                    "type": "integer",
                    "format": "int64"
                },
                "username": {
                    "type": "string"
